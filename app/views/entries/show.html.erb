
<%= notice %>
<h2><%= @entry.title %></h2>
  <p><%= @entry.date %></p>
  <p><%= @entry.contents %></p>
  <p><%= link_to("Back to all entries", entries_path) %></p>
  <p><%= link_to("Edit this entry", edit_entry_path(@entry)) %></p>
<p><%= image_tag(@entry.image_url, width: 600) if @entry.image.present? %></p>
  <p><%= link_to("Delete", @entry , method: :delete, data: {confirm: "Are you sure?"}) %></p>
